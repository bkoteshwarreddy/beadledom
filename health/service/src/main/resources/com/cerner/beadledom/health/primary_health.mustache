<!DOCTYPE html>
<html>
<head>
    <title>Primary Health Check</title>
    {{> style}}
</head>
<body>


<h1 class="{{statusClass}}">
    {{message}}
</h1>

<table>
    <thead>
        <tr>
            <td>Dependency</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        {{#dependencies}}
            <tr class="{{statusClass}}">
                <td><a href="{{link}}">{{name}}</a></td>
                <td>{{statusText}}</td>
            </tr>
        {{/dependencies}}
    </tbody>
</table>

</body>
</html>
